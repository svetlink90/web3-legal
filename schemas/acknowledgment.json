{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Acknowledgment",
  "type": "object",
  "properties": {
    "address": {"type": "string"},
    "owner_ack": {"type": "boolean"},
    "screening": {
      "type": "object",
      "properties": {
        "address": {"type": "string"},
        "hit": {"type": "boolean"},
        "sources": {
          "type": "array",
          "items": {"type": "string"}
        }
      },
      "required": ["address", "hit", "sources"]
    },
    "analysis": {
      "type": "object",
      "properties": {
        "decision": {"type": "string"},
        "rationale": {"type": "string"}
      },
      "required": ["decision", "rationale"]
    }
  },
  "required": ["address", "owner_ack", "screening", "analysis"],
  "additionalProperties": false
}
